@model SocialRichAlejandro.ViewModel.UserViewModel

@{
    ViewData["Title"] = "About";
}


<div class="row">
    <div class="col-md-6">
        <h2>Usuario</h2>
        <ul>
            @{
                <li id="userId">id: @(Model.Id) | nombre: @(Model.Name) | apellido: @(Model.Subname) | red favorita: @(Model.FavouriteNetwork.Name)</li>
                <li id="nombre"></li>
                <li id="apellido"></li>
                <li id="favorita"></li>
                <ul id="NetList">
                    <h5>Lista de Redes del usuario</h5>
                    @{
                        foreach (var network in Model.Networks)
                        {
                            <li>red social:  @(network.Name)</li>
                        }
                    }
                </ul>
            }
        </ul>
    </div>


    <div class="col-md-3">
        <h2>Añadir favorito</h2>
        <form asp-controller="User" asp-action="EditFavourite" method="post">
            <div>
                <label>UserId:</label>
                <input type="number" name="UserId" value="@(Model.Id)" required />
            </div>
            <div>
                <label>social Network:</label>
                <input type="number" name="socialNetworkid" required />
            </div>
            <div>
                <input class="hidden" type="text" name="IsFavourite" value="True" />
            </div>
            <div class="button">
                <button type="submit">Search</button>
            </div>
        </form>
    </div>

    <div class="col-md-3">
        <h2>Añadir red social</h2>
        <form action="@(Url.Action("AddSocialNet", "User"))" method="post">
            <div>
                <label>UserId:</label>
                <input type="number" name="UserId" value="@(Model.Id)" required />
            </div>
            <div>
                <label>social Network:</label>
                <input type="number" name="socialNetworkid" required />
            </div>
            <div>
                <input class="hidden" type="text" name="IsFavourite" value="false" />
            </div>
            <div class="button">
                <button type="submit">Search</button>
            </div>
        </form>
    </div>

</div>





@Html.ActionLink("Volver", "Index", "Home", null, new { @class = "btn btn-info" })

<script>
    var UrlGetUserData = "@(Url.Action("GetUserData", "User"))";
    var UserId = @ViewBag.UserId;
