@model SocialRichAlejandro.ViewModel.AddSocialNetwork

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="row">
    <div class="col-md-7">
        <h2>Añadir Red Social</h2>
        <ul>
            <form class="form-group" asp-controller="SocialNetwork" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div>
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" type="text" name="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Url">Url:</label>
                    <input asp-for="Url" type="text" name="Url" required />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="button">
                    <button type="submit">Añadir</button>
                </div>
            </form>
        </ul>
    </div>
</div>

@Html.ActionLink("Volver", "Index", "SocialNetwork", null, new { @class = "btn btn-info" })