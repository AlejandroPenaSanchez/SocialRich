@model SocialRichAlejandro.ViewModel.SocialNetworkListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-6">
        <h2>Lista de Redes Sociales y sus Usuarios</h2>
        <ul>
            @{
                foreach (var SNet in Model.SocialNetworkList)
                {
                    <li>id: @(SNet.Id) | nombre: @(SNet.Name) | Url: @(SNet.Url)</li>
                    <ul>
                        <h5>Lista de Usuarios de la Red Social</h5>
                        @{
                            foreach (var usuario in SNet.SocialNetworkUsers)
                            {
                                <li>Id del Usuario: @(usuario.Id)</li>
                                <li>Nombre del Usuario: @(usuario.Name)</li>
                            }
                        }
                    </ul>
                }
            }
        </ul>
    </div>
    <div class="col-lg-6">
        @Html.ActionLink("Añadir Red Social", "Create", "SocialNetwork", null, new { @class = "btn btn-info" })
    </div>

</div>

@Html.ActionLink("Volver", "Index", "Home", null, new { @class = "btn btn-info" })


